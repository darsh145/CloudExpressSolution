---
interface Props {
	title?: string;
}

const { title = "POD T-Shirt Store" } = Astro.props;

import '../styles/tshirt-customizer.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="header">
			<div class="header-container">
				<h1 class="header-title">POD T-Shirt Customizer</h1>
			</div>
		</header>
		
		<slot />
		
		<footer class="footer">
			<div class="footer-container">
				<div class="footer-section">
					<h3 class="footer-title">POD T-Shirt Store</h3>
					<p class="footer-subtitle">Create your perfect custom t-shirt</p>
				</div>
				<div class="footer-section">
					<h4 class="footer-links-title">Quick Links</h4>
					<ul class="footer-links">
						<li><a href="#">Home</a></li>
						<li><a href="#">About</a></li>
						<li><a href="#">Contact</a></li>
					</ul>
				</div>
			</div>
			<div class="footer-copyright">
				&copy; {new Date().getFullYear()} POD T-Shirt Store. All rights reserved.
			</div>
		</footer>
	</body>
</html>
